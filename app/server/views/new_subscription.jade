
extends layout

block signout
	button#btn-logout.btn.btn-primary
		i.icon-lock.icon-white
		| Sign Out

block content
	.home-container
		.well
			form(action="/subscriptions/new", method="post")
				label(for="name") Team Name
				select.form-control(name="name")
					- for (var i in teams)
						- var team = teams[i]
						option(value=team)= team
				label(for="name") Mail Frequency (days)
				select.form-control(name="frequency")
					option(value="1") 1
					option(value="2") 2
					option(value="3") 3
					option(value="4") 4
					option(value="5") 5
					option(value="6") 6
					option(value="7") 7
				input(type="submit" value="Submit")

block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/vendor/bootstrap.min.js')
